binds {
    XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "dms ipc call audio increment 3"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn-sh "dms ipc call audio decrement 3"; }
    XF86AudioMute allow-when-locked=true { spawn-sh "dms ipc call audio mute"; }
    XF86AudioMicMute allow-when-locked=true { spawn-sh "dms ipc call audio micmute"; }
    XF86MonBrightnessUp allow-when-locked=true { spawn-sh "dms ipc call brightness increment 5" ; }
    XF86MonBrightnessDown allow-when-locked=true { spawn-sh "dms ipc call brightness decrement 5" ; }
    XF86AudioPlay allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    XF86AudioNext allow-when-locked=true { spawn-sh "playerctl next"; }
    XF86AudioPrev allow-when-locked=true { spawn-sh "playerctl previous"; }

    // === Window Management ===
    Mod+Slash repeat=false { toggle-overview; }
    Mod+Shift+Slash { show-hotkey-overlay; }
    Mod+Q repeat=false { close-window; }
    Mod+E { toggle-column-tabbed-display; }
    Mod+Shift+Escape { toggle-keyboard-shortcuts-inhibit; }

    // Apps
    Mod+Escape allow-inhibiting=false repeat=false { spawn-sh "dms ipc call powermenu toggle"; }
    Mod+Shift+W { spawn-sh "prime-run zen-browser"; }
    Mod+Shift+G { spawn-sh "kitty -1 -e sesh connect stuff"; }
    Ctrl+Grave { spawn "kitten" "quick-access-terminal"; }
    Print { spawn "~/.local/bin/dms-screenshot"; }
    Shift+Print { screenshot-window write-to-disk=false; }
    Alt+Print { screenshot-screen write-to-disk=false; }
    Mod+N { spawn-sh "/home/opal/.local/bin/nvim-wl-anywhere.sh --keystroke-mode --rm-tmp"; }
    Mod+0 {spawn-sh "ROFI_PASS_CONFIG=\"/home/opal/.config/rofi-pass/config\" rofi-pass"; }
    // Mod+SHIFT+Y { spawn "~/.config/hypr/scripts/rofi-beats"; }
    Mod+Semicolon { spawn-sh "vicinae vicinae://extensions/vicinae/clipboard/history"; }
    Mod+X { spawn-sh "dms ipc call bar toggle index 0"; }
    Mod+T { spawn "~/.local/bin/toConsumeOrNot.sh"; }
    Mod+Space { spawn-sh "dms ipc call spotlight toggle"; }
    Mod+B repeat=false { spawn-sh "kitty -1 --class=btop -o background_opacity=1 -e btop"; }
    Mod+Shift+N repeat=false { spawn-sh "kitty -1 --class=btop -o background_opacity=1 -e nvtop"; }
    Mod+Shift+Y { spawn-sh "kitty -1 --class=btop -o background_opacity=1 -e rmpc"; }

    // scratch apps
    // https://github.com/gvolpe/niri-scratchpad
    Mod+S { spawn-sh "~/.local/bin/nscratch -a -id scratch -s /home/opal/.local/bin/scratchterm"; }
    Mod+O { spawn-sh "~/.local/bin/nscratch -a -id whatsappweb-nativefier-d40211 -s /home/opal/.config/WhatsAppWeb-linux-x64/WhatsAppWeb"; }
    Mod+Backspace { spawn-sh "~/.local/bin/nscratch -a -t Steam -s steam"; }
    Mod+7 repeat=false { spawn-sh "~/.local/bin/nscratch -a -id FortiClient -s /opt/forticlient/gui/FortiClient"; }

    // use nirius
    // https://sr.ht/~tsdh/nirius/
    Mod+W { spawn-sh "nirius focus-or-spawn -a zen prime-run zen-browser"; }
    Mod+Z { spawn-sh "nirius focus-or-spawn -a \"Apache Directory Studio\" ApacheDirectoryStudio"; }
    Mod+A { spawn-sh "nirius focus-or-spawn -a \"outlook-for-linux\" /opt/outlook-for-linux/outlook-for-linux"; }
    Mod+M { spawn-sh "nirius toggle-mark"; }
    Mod+Apostrophe { spawn-sh "nirius focus-marked"; }
    Mod+R { spawn-sh "nirius focus-or-spawn -a teams-for-linux /opt/teams-for-linux/teams-for-linux"; }
    Mod+G { spawn-sh "nirius focus-or-spawn -a kitty kitty"; }

    // === Focus Navigation ===
    Mod+H     { focus-column-left; }
    Mod+J     { focus-window-down; }
    Mod+K     { focus-window-up; }
    Mod+L     { focus-column-right; }

    // === Window Movement ===
    Mod+Ctrl+H     { move-column-left; }
    Mod+Ctrl+J     { move-window-down; }
    Mod+Ctrl+K     { move-window-up; }
    Mod+Ctrl+L     { move-column-right; }

    // === Column Navigation ===
    Mod+Home      { focus-column-first; }
    Mod+End       { focus-column-last; }
    Mod+Ctrl+Home { move-column-to-first; }
    Mod+Ctrl+End  { move-column-to-last; }

    // === Monitor Navigation ===
    Mod+Comma { focus-monitor-left; }
    Mod+Period  { focus-monitor-right; }

    // === Move to Monitor ===
    Mod+Shift+Comma  { move-column-to-monitor-left; }
    Mod+Shift+Period { move-column-to-monitor-right; }

    // === Workspace Navigation ===
    Mod+Page_Down      { focus-workspace-down; }
    Mod+Page_Up        { focus-workspace-up; }
    Mod+U              { focus-workspace-down; }
    Mod+I              { focus-workspace-up; }
    Mod+Ctrl+U         { move-column-to-workspace-down; }
    Mod+Ctrl+I         { move-column-to-workspace-up; }

    // === Move Workspaces ===
    Mod+Shift+Page_Down { move-workspace-down; }
    Mod+Shift+Page_Up   { move-workspace-up; }
    Mod+Shift+U         { move-workspace-down; }
    Mod+Shift+I         { move-workspace-up; }

    // === Mouse Wheel Navigation ===
    // Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    // Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    // Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    // Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    // Mod+WheelScrollRight      { focus-column-right; }
    // Mod+WheelScrollLeft       { focus-column-left; }
    // Mod+Ctrl+WheelScrollRight { move-column-right; }
    // Mod+Ctrl+WheelScrollLeft  { move-column-left; }

    Mod+WheelScrollDown      { focus-column-right; }
    Mod+WheelScrollUp        { focus-column-left; }
    Mod+Ctrl+WheelScrollDown { move-column-right; }
    Mod+Ctrl+WheelScrollUp   { move-column-left; }

    // === Numbered Workspaces ===
    Mod+1 { focus-workspace ""; }
    Mod+2 { focus-workspace ""; }
    Mod+3 { focus-workspace ""; }
    Mod+4 { focus-workspace ""; }

    // === Move to Numbered Workspaces ===
    Mod+Ctrl+1 { move-column-to-workspace ""; }
    Mod+Ctrl+2 { move-column-to-workspace ""; }
    Mod+Ctrl+3 { move-column-to-workspace ""; }
    Mod+Ctrl+4 { move-column-to-workspace ""; }

    // === Column Management ===
    Mod+Shift+H  { consume-or-expel-window-left; }
    Mod+Shift+L { consume-or-expel-window-right; }
    Mod+Y { expel-window-from-column; }

    // === Sizing & Layout ===
    // Mod+R { switch-preset-column-width; }
    // Mod+Shift+R { switch-preset-window-height; }
    Mod+Ctrl+R  { reset-window-height; }
    Mod+Ctrl+F  { maximize-column; }
    Mod+C       { center-column; }
    Mod+Ctrl+C  { center-visible-columns; }
    Mod+F       { fullscreen-window; }
    Mod+Shift+F { maximize-window-to-edges; }
    Mod+Shift+B { toggle-windowed-fullscreen; }
    Mod+V       { toggle-window-floating; }
    Mod+Shift+V { switch-focus-between-floating-and-tiling; }

    // === Manual Sizing ===
    Mod+Minus { set-column-width "-25%"; }
    Mod+Equal { set-column-width "+25%"; }
    Mod+Shift+Minus { set-window-height "-25%"; }
    Mod+Shift+Equal { set-window-height "+25%"; }

    // === System Controls ===
    // Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    // Mod+Shift+P { power-off-monitors; }

    // Projector
    // Mod+P repeat=false { spawn-sh "wl-mirror $(niri msg --json focused-output | jq -r .name)"; }
    Mod+P repeat=false { spawn-sh "wl-mirror $(niri msg outputs | grep '^Output' | cut -d'(' -f 2 | cut -d')' -f 1 | vicinae dmenu )"; }

    // Dynamic screencast
    Mod+Shift+Print repeat=false { set-dynamic-cast-window; }
    Mod+Ctrl+Print repeat=false { set-dynamic-cast-monitor; }
    Mod+Delete repeat=false { clear-dynamic-cast-target; }
}
